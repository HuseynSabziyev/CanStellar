@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            setInterval(function () {
                $.ajax({
                    url: '@Url.Action("Index", "HomeController")',
                    type: 'GET',
                    success: function (response) {
                        $('#tele-data').html(response); // Update the data card with the updated data
                    },
                    error: function () {
                        console.log('Error occurred while fetching data.');
                    }
                });
            }, 5000); // Fetch data every 5 seconds (adjust the interval as per your needs)
        });
    </script>
}

@using CanStellarBack.Models
@model List<Telemetry>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>YİS İnterfeys</title>
</head>
<body>
    <div id="header" class="container-fluid">
        <img id="logo" src="./assets/logo.png" alt="">
        <h2>CanStellar YİS İnterfeysi</h2>
        <divs>
    </div>

    </div>
    <div id="main" class="container-fluid">
        <div id="databox" class="container-sm  display-flex flex-direction-column">
            @{
                foreach (var item in Model)
                {
                    
                        <div id="tele-data">
                            <p id="raw-telemetric-data">1. Xam Telemetriya: @item.Raw</p>
                            <h6>Detallı telemetriya:</h6>
                            <ol id="telemetric-data-list">
                                <li><p>Komanda ID: @item.TeamId</p></li>
                                <li><p>Çalışma müddəti: @item.WorkingTime s</p></li>
                                <li><p>Telemetriya paketlərinin sayı: @item.NumberOfPackages</p></li>
                                <li><p>Batereyanın gərginliyi: @item.CurrentVoltage V</p></li>
                                <li><p>Hündürlük: @item.Altitude m</p></li>
                                <li><p>Sürət: @item.Speed m/s</p></li>
                                <li><p>Coğrafi en: @item.Latitude </p></li>
                                <li><p>Coğrafi uzunluq: @item.Longitude </p></li>
                                <li><p>Daşıyıcıdan ayrıldığı vaxt: @item.TimeSinceSeperation s</p></li>
                                <li><p>Videogörüntünün müddəti: @item.DurationOfVideo s</p></li>
                            </ol>
                        </div>
                }
                
            }

        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</html>