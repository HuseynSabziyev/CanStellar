    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src=" https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.5/dist/browser/signalr.min.js "></script>
    <script>
        $(document).ready(function () {
            // Declare the SignalR connection
            var connection = new signalR.HubConnectionBuilder()
                .withUrl("/telemetryHub") // Replace with your SignalR hub URL
                .build();

            // Start the SignalR connection
            connection.start()
                .then(function () {
                    console.log("SignalR connected");
                    console.log("bura qeder hersey zor");
                    // Receive telemetry data from the SignalR hub
                    connection.on("ReceiveTelemetryData", function (telemetry) {
                       
                        // Update the telemetry data in the HTML
                        var telemetryDataContainer = $("#tele-data");
                        
                        telemetryDataContainer.empty();
                      
                        $.each(telemetry, function (index, item) {
                            var telemetryData = '<div id="tele-data">' +
                                '<p id="raw-telemetric-data">' + (index + 1) + '. Xam Telemetriya: ' + item.Raw + '</p>' +
                                '<h6>Detallı telemetriya:</h6>' +
                                '<ol id="telemetric-data-list-' + index + '">' +
                                '<li><p>Komanda ID: ' + item.TeamId + '</p></li>' +
                                '<li><p>Çalışma müddəti: ' + item.WorkingTime + ' s</p></li>' +
                                '<li><p>Telemetriya paketlərinin sayı: ' + item.NumberOfPackages + '</p></li>' +
                                '<li><p>Batereyanın gərginliyi: ' + item.CurrentVoltage + ' V</p></li>' +
                                '<li><p>Hündürlük: ' + item.Altitude + ' m</p></li>' +
                                '<li><p>Sürət: ' + item.Speed + ' m/s</p></li>' +
                                '<li><p>Coğrafi en: ' + item.Latitude + '</p></li>' +
                                '<li><p>Coğrafi uzunluq: ' + item.Longitude + '</p></li>' +
                                '<li><p>Daşıyıcıdan ayrıldığı vaxt: ' + item.TimeSinceSeperation + '</p></li>' +
                                '<li><p>Videogörüntünün müddəti: ' + item.DurationOfVideo + ' s</p></li>' +
                                '</ol>' +
                                '</div>';

                            telemetryDataContainer.append(telemetryData);
                        });
                    });
                })
                .catch(function (error) {
                    console.error(error);
                });
        });
    </script>
